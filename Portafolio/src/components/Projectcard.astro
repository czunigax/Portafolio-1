---
const { title, description, slug, image } = Astro.props;
---

<article class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow h-auto">
  {image && (
    <div class="w-full flex justify-center items-center bg-gray-200 rounded-lg overflow-hidden">
      <img  
        src={image}  
        alt={title}  
        class="w-full h-auto max-h-60 object-cover rounded-lg mb-4"  
      />
    </div>
  )}
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-700 mb-4">{description}</p>
  <a href={`/projects/${slug}`} class="text-blue-600 hover:underline">Ver m√°s</a>
</article>






