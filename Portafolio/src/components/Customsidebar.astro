---
import { navItems } from '../content/data/data.ts';
---

<aside class="bg-gradient-to-br from-sky-800 to-sky-900 w-64 min-h-screen p-6 shadow-xl">
  <nav class="sidebar-nav">
    <ul class="space-y-4">
      {navItems.map((item) => (
        <li class="menu-item">
          <a
            href={item.href}
            class="block py-2 px-3 text-white rounded-lg hover:bg-sky-700/40 transition-colors font-medium"
          >
            <span data-lang="es">{item.titleEs}</span>
          </a>
          {item.subitems && (
            <ul class="mt-2 ml-4 space-y-2 border-l-2 border-orange-600/30 pl-4">
              {item.subitems.map((subitem) => (
                <li>
                  <a
                    href={subitem.href}
                    class="block py-1 px-3 text-white/80 hover:text-white rounded-lg text-sm hover:bg-orange-700/40 transition-colors"
                  >
                    <span data-lang="es">{subitem.titleEs}</span>
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>
</aside>

