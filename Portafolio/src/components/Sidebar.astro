---
import { socials } from '../content/data/data.ts';
---

<aside class="bg-gray-800 text-white w-64 p-4">
  <nav>
    <ul>
      <li><a href="/" class="block py-2 hover:bg-gray-700">Inicio</a></li>
      <li><a href="/projects" class="block py-2 hover:bg-gray-700">Proyectos</a></li>
      <li><a href="/contact" class="block py-2 hover:bg-gray-700">Contacto</a></li>
    </ul>
  </nav>
  <div class="mt-4">
    <h3 class="text-lg font-bold">Redes Sociales</h3>
    <div class="flex space-x-2">
      {
        socials.map((social) => (
          <a href={social.url} target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d={social.icon} />
            </svg>
          </a>
        ))
      }
    </div>
  </div>
</aside>